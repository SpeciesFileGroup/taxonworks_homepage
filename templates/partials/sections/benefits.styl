.benefits-section

    &__container
        @extends $sectionContainer
        display flex
        position relative

        &--less-padding-below
            padding-bottom 64px

        &:nth-child(2)
            padding-top 0
            padding-bottom 0

        &__inner
            @extends $normalFlexItem
            display flex
            flex-flow column

            +breakpoint(small)
                display block

    &__section-1
        background-color color-green

    &__leaves
        max-width content-max-width
        margin 0 auto

        +breakpoint(small)
            display none

    &__leaves-image
        height auto
        max-width 100%

    &__section-2
    &__section-3
    &__section-4
        min-height 824px 
        
        ul
            font-size 20px
            font-weight 400
            line-height 1.4

        li
            margin-bottom 16px

    &__section-2
    &__section-4
        background-color color-grey

    &__section-3
        background-color color-white

    &__connecting-lines
        bottom 0
        left section-padding
        position absolute
        right section-padding
        top 0

        +breakpoint(medium)
            left section-padding-medium-x
            right section-padding-medium-x

        +breakpoint(small)
            left 0
            right 24px

        &-image
            width 100%

    &__section-3
        background-image url("images/branches-2.svg")
        background-position 15% top 
        background-repeat no-repeat
        background-size contain

        +breakpoint(small)
            background none

    &__section-4
        background-image url("images/trunk.svg")
        background-position 85% top 
        background-repeat no-repeat

        +breakpoint(small)
            background none

    &__title
        @extends $bigHeader
        @extends $normalFlexItem

    &__copy
        @extends $smallHeader
        @extends $normalFlexItem

        +breakpoint(small)
            margin-bottom 48px

        h3
        p
            margin-bottom 12px

        h3
            @extends $mediumHeader

        > ul
            @extends $list

    &__illustrations
        display flex
        max-height 100%
        max-width 100%

    &__copy
    &__illustration
        position relative

    &__illustration
        @extends $normalFlexItem

        &__1
        &__2
        &__3 
        &__4 
            max-height 25%
            max-width 25%
            object-fit contain

            img
                max-width 100%

                +breakpoint(small)
                    display none

        &__2
        &__3
            position relative

        &__2
            top -80px

        &__3
            top 80px

        &__small
            display none
            width 100%

            +breakpoint(small)
                display block

        &__large
            +breakpoint(small)
                display none

    &__mobile-image
        @extend $normalFlexItem
        display none
        width 100%

        +breakpoint(small)
            display block

        img
            object-fit contain
            width 100%

    &__sponsor-grid
        @extends $normalFlexItem
        margin-top 48px

    &__empty
        @extends $normalFlexItem

        +breakpoint(small)
            display none
