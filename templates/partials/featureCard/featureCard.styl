.feature-card
    border-top 2px solid color-green
    color color-white

    &[data-inactive]
        display none

    &__feature-content
        background-color color-cocoa
        padding 16px

    &__name
        @extend $mediumHeader
        margin-bottom 12px

    &__description
        color color-beige
        font-weight 400
        margin-bottom 16px

    &__details
        display flex
        justify-content space-between

    &__status
    &__available
        font-weight 600

        &-label
        &-value
            display inline-block

        &-label
            margin-right 6px

        & .status-upcoming
        & .available-next-or-three-years
            color status-color-orange
        
        & .status-in-progress
        & .available-this-year
            color status-color-green

        & .status-complete
        & .available-now
            color status-color-blue

    &__sub-features
        list-style none inside

    &__sub-feature-item
        margin-top 2px

    &__sub-feature-item-button
        @extend $buttonHelper
        background-color color-cocoa
        color color-green
        display block
        padding 14px 16px
        text-align left
        transition background-color 300ms, color 300ms

        &:hover
        &:focus
            background-color color-green
            border solid 2px color-green
            color color-cocoa

    &.inactive-card
        display none