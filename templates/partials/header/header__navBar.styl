.header__nav-bar
    background-color color-brown
    height header-navbar-height
    overflow hidden
    padding 2px
    position fixed
    top -(header-navbar-height)
    width 100%
    z-index 1

    .header__nav-bar__logo
        float left
        height 48px
        margin-left 16px
        object-fit contain
        position relative
        top 50%
        transform translate(0, -50%)
        width 48px

    .header__nav-bar__text
        height 27px
        margin-left 16px
        object-fit contain
        position relative
        top 50%
        transform translate(0, -50%)
        width 204px

    .header__nav-bar__links
        float right
        height inherit

        a 
            display block
            float left
            padding 8px 24px
            position relative
            top 50%
            transform translate(0, -50%)