.benefits-section

    &__container
        @extends $sectionContainer
        display flex
        position relative

        &__illustrations
            align-items center
            display flex
            height 330px
            justify-content space-between
            margin 0
            padding 0
            position relative
            top -30px
            width 100%

            +breakpoint(small)
                display none

        &:nth-child(2)
            padding-top 0
            padding-bottom 0

        &__inner
            @extends $normalFlexItem
            display flex
            flex-flow column

            +breakpoint(small)
                display block

    &__section-1
        background-color color-green

    &__section-2
    &__section-3
    &__section-4
        min-height 824px 
        
        ul
            font-size 20px
            font-weight 400
            line-height 1.4

        li
            margin-bottom 16px

    &__section-2
    &__section-4
        background-color color-grey

    &__section-3
        background-color color-white

    &__connecting-lines
        background url(images/branches-1.svg) no-repeat
        background-size contain
        bottom 0
        left section-padding-large
        position absolute
        right section-padding-large
        top 0

        +breakpoint(medium)
            left section-padding-medium
            right section-padding-medium

        +breakpoint(small)
            background url(images/branches-1-small.svg) no-repeat
            background-position 100% 0
            left 0
            right 24px

    &__section-3
        background-image url("images/branches-2.svg")
        background-position 15% top 
        background-repeat no-repeat
        background-size contain

        +breakpoint(small)
            background none

    &__section-4
        background-image url("images/trunk.svg")
        background-position 85% top 
        background-repeat no-repeat

        +breakpoint(small)
            background none

    &__title
        @extends $bigHeader
        @extends $normalFlexItem

    &__copy
        @extends $smallHeader
        @extends $normalFlexItem

        +breakpoint(small)
            margin-bottom 48px

        h3
        p
            margin-bottom 12px

        h3
            @extends $mediumHeader

        > ul
            @extends $list

    &__illustrations
        display flex
        max-height 100%
        max-width 100%

    &__copy
    &__illustration
        position relative

    &__illustration
        @extends $normalFlexItem

        &__1
        &__2
        &__3 
        &__4 
            max-height 25%
            max-width 25%
            object-fit contain

            img
                max-width 100%

                +breakpoint(small)
                    display none

        &__2
        &__3
            position relative

        &__2
            top -80px

        &__3
            top 80px

        &__small
            display none
            width 100%

            +breakpoint(small)
                display block

        &__large
            +breakpoint(small)
                display none

    &__mobile-image
        @extend $normalFlexItem
        display none
        width 100%

        +breakpoint(small)
            display block

        img
            object-fit contain
            width 100%

    &__sponsor-grid
        @extends $normalFlexItem
        margin-top 48px

    &__empty
        @extends $normalFlexItem

        +breakpoint(small)
            display none
