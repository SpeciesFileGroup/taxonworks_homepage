.benefits-section

    &__container
        @extends $sectionContainer

    &__section-1
        background-color color-green

    &__section-2
    &__section-3
    &__section-4
    &__section-5
        height 824px 
        
        h3
            @extends $mediumHeader
            margin-bottom 12px
        ul
            font-size 20px
            font-weight 400
            line-height 1.4

        li
            margin-bottom 16px

    &__section-2
    &__section-4
        background-color color-grey

    &__section-3
    &__section-5
        background-color color-white

    &__section-2
        background-image url("images/branches-1.svg")
        background-position 322px top 
        background-repeat no-repeat
        background-size contain

    &__section-3
        background-image url("images/branches-2.svg")
        background-position 200px top 
        background-repeat no-repeat
        background-size contain

    &__section-4
        background-image url("images/branches-3.svg")
        background-position 816px top 
        background-repeat no-repeat
        background-size contain

    &__section-5
        background-image url("images/trunk.svg")
        background-position 199px top 
        background-repeat no-repeat
        background-size contain

    &__title
        @extends $bigHeader

    &__copy
        @extends $smallHeader

        > ul
            @extends $list