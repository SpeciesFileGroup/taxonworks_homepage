.header-section
    background-color color-brown
    height 960px
    overflow hidden
    position relative
    text-align center

    +breakpoint(medium)
        height 750px

    &__container
        @extends $sectionContainer

        +breakpoint(medium)
            padding 160px 48px

    &__text-title
        color color-white

        &__logo
            margin-bottom 24px

            +breakpoint(medium)
                margin-bottom 16px
                width 340px

    &__logo
        position relative
        text-align left
        top -52px
        z-index 5            

    &__tree-image
        object-fit contain
        left -715px
        position absolute
        top -695px

    &__logo-image
        object-fit contain

        +breakpoint(medium)
            height 132px
            width 136px

    &__text
        text-align left
        z-index 5

    &__text-slogan
        @extends $bigHeader
        color color-green
        margin-bottom 64px

        +breakpoint(medium)
            margin-bottom 48px
        
    &__text-copy
        @extends $smallHeader
        border-top 2px solid color-green
        font-weight 400
        padding-top 24px

        > p
            color color-white