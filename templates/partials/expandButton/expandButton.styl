.expand-button
    @extend $buttonReset
    background-color color-cocoa
    color color-green

    font-size 20px
    line-height 28px
    padding 14px 24px
    position relative
    text-align left
    width 100%

    &__left-border
    &__right-border
    &__top-border
    &__bottom-border
        background-color color-green
        position absolute

    &__top-border
    &__bottom-border
        left 0
        height 2px
        right 0

    &__right-border
    &__left-border
        bottom 0
        top 0
        transform-origin 50% 0
        width 2px

    &__left-border
        left 0

    &__right-border
        right 0

    &__top-border
        top 0

    &__bottom-border
        bottom 0