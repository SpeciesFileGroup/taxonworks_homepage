.benefits-section

    &__container
        @extends $sectionContainer

        &__illustrations
            height 330px
            justify-content space-between
            margin 0
            padding 0
            position relative
            top -30px
            width 100%

        &:nth-child(2)
            padding 0 200px

    &__section-1
        background-color color-green

    &__section-2
    &__section-3
    &__section-4
        min-height 824px 
        
        h3
            @extends $mediumHeader
            margin-bottom 12px
        ul
            font-size 20px
            font-weight 400
            line-height 1.4

        li
            margin-bottom 16px

    &__section-2
    &__section-4
        background-color color-grey

    &__section-3
        background-color color-white

    &__section-2
        background-image url("images/branches-1.svg")
        background-position 85% top 
        background-repeat no-repeat
        background-size contain

    &__section-3
        background-image url("images/branches-2.svg")
        background-position 15% top 
        background-repeat no-repeat
        background-size contain

    &__section-4
        background-image url("images/trunk.svg")
        background-position 85% top 
        background-repeat no-repeat

        > .wrapper
            flex-direction column

    &__title
        @extends $bigHeader

    &__copy
        @extends $smallHeader

        > ul
            @extends $list

    &__illustrations
        max-height 100%
        max-width 100%

    &__illustration
        &__1
        &__2
        &__3 
        &__4 
            max-height 25%
            max-width 25%
            object-fit contain

            img
                max-width 100%

        &__2
        &__3
            position relative

        &__2
            top -80px

        &__3
            top 80px

    &__sponsor-grid
        width 50%

        +breakpoint(medium)
            width 100%

        +breakpoint(small)
            width 100%

        +breakpoint(tiny)
            width 100%

        &__grid 
            flex-wrap wrap
            width 100%

        &__sponsor
            background-color sponsor-grid-grey
            height 112px
            margin 0 16px 16px 0
            max-width 160px

            +breakpoint(medium)
                max-width none

            +breakpoint(small)
                max-width none

            +breakpoint(tiny)
                max-width none
