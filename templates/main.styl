// Imports
@import 'styles/global/variables/**'

@import 'styles/fonts'
@import 'styles/resets'
@import 'styles/headers'
@import 'styles/lists'
@import 'styles/buttons'
@import 'styles/flex'
@import 'styles/copy'

@import 'pages/**'
@import 'partials/**'

// Base elements
body
    color color-brown
    font-family Hind
    font-size 20px
    font-stretch normal
    font-style normal
    letter-spacing normal
    line-height 1.4

a
    color color-moss
    text-decoration none

// Accessibility
.hidden
    border 0
    clip rect(0 0 0 0)
    height 1px
    margin -1px
    overflow hidden
    padding 0
    position absolute