media_queries = {
    small  : "only screen and (max-width: 320px)",
    medium : "only screen and (min-width: 321px) and (max-width: 840px)",
    large  : "only screen and (min-width: 841px)"
}

breakpoint(breakpoints)
    conditions = ()
    for breakpoint in breakpoints
        push(conditions, media_queries[breakpoint])
    conditions = join(", ", conditions)
    @media conditions
        {block}