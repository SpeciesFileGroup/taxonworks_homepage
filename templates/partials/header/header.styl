.header-section
    background-color color-brown
    overflow hidden
    position relative
    text-align center

    &__container
        @extends $sectionContainer

    &__text-title
        color color-white

        &__logo
            margin-bottom 24px

    &__logo
        position relative
        text-align left
        top -52px
        z-index 5

    &__tree-image
        object-fit contain
        left -200px
        position absolute
        top -200px

    &__logo-image
        object-fit contain

    &__text
        text-align left
        z-index 5

    &__text-slogan
        color color-green
        font-size 60px
        font-weight 300
        line-height 1.17
        margin-bottom 64px
        
    &__text-copy
        @extends $smallHeader
        border-top 2px solid color-green
        font-weight 400
        padding-top 24px

        > p
            color color-white