.header__nav-bar
    height header-navbar-total-height
    position fixed
    top -(header-navbar-total-height)
    width 100%
    z-index 10

    &__desktop
        background-color color-brown
        height header-navbar-bar-height
        padding 2px

    &__logo
        float left
        height 48px
        margin-left 16px
        object-fit contain
        position relative
        top 50%
        transform translate(0, -50%)
        width 48px

        +breakpoint(small)
            height 36px
            margin-left 8px
            width 36px

    &__text
        height 27px
        margin-left 16px
        object-fit contain
        position relative
        top 50%
        transform translate(0, -50%)
        width 204px

        +breakpoint(medium)
            margin-left 12px
            width 186px

        +breakpoint(small)
            margin-left 8px
            width 172px

    &__links
        float right
        height inherit

        +breakpoint(small)
            display none

        a 
            display block
            float left
            padding 8px 24px
            position relative
            top 50%
            transform translate(0, -50%)

            +breakpoint(medium)
                padding 8px 16px

        &__mobile
            background-color color-grey
            display none
            height header-navbar-mobile-height

            ul
                list-style-image none
                list-style-type none
                margin 0
                padding 0

                a
                    text-align center

                    li 
                        border-bottom 2px solid color-brown
                        display block
                        padding 10px 0

                        &:hover
                            background-color color-green
                            color color-grey

    &__button
        &.hamburger
            background-color color-brown
            color color-white
            display none
            float right
            font-size 24px
            height 36px
            margin-right 8px
            position relative
            top 25%
            width 36px

            +breakpoint(small)
                display inline-block