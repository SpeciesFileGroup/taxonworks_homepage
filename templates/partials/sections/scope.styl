.scope-section
    background-color color-brown

    &__container-1
    &__container-2
        @extends $sectionContainer

    &__container-1
        +breakpoint(large)
            padding 160px 160px 144px 160px

    &__container-2 
        position relative
        z-index 2

        +breakpoint(large)
            padding 0 160px 160px 160px

    &__gradient 
        background-image linear-gradient(to bottom, gradient-brown, color-brown)
        height 288px
        margin-top 112px
        position absolute
        width 100%
        z-index 1

        +breakpoint(medium)
            margin-top 180px

    &__title
        @extends $bigHeader
        color color-green

    &__copy
        color color-white

    &__feature-intro 
        @extends $mediumHeader
        color color-white
        margin-bottom 32px

    &__features
        display flex

        +breakpoint(small)
            flex-direction column

    &__feature-cards
    &__feature-core-container
        flex 1 1 0

    &__feature-core-container
        +breakpoint(medium)
            margin-right 16px

        +breakpoint(large)
            margin-right 16px

    &__feature-cards
        +breakpoint(medium)
            margin-left 16px
            
        +breakpoint(large)
            margin-left 16px