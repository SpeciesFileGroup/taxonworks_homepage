.header-section
    background-color color-brown
    height 960px
    overflow hidden
    position relative
    text-align center

    +breakpoint(medium)
        min-height 750px

    +breakpoint(small)
        height auto

    &__container
        @extends $sectionContainer

        +breakpoint(medium)
            padding 160px 48px

        +breakpoint(small)
            flex-flow column wrap
            padding 40px 24px

    &__text-title
        color color-white

        &__logo
            margin-bottom 24px

            +breakpoint(medium)
                margin-bottom 16px
                width 340px

            +breakpoint(small)
                margin-bottom 12px
                width 272px

    &__logo
        position relative
        text-align left
        top -52px
        z-index 5

        +breakpoint(small)
            top 0

    &__tree-image
        object-fit contain
        left -715px
        position absolute
        top -695px

        +breakpoint(small)
            left -730px
            top -730px
            transform rotate3d(-1, -1, 0, -180deg) scale(.6)

    &__logo-image
        left -700px
        object-fit contain
        position absolute
        top -700px

        +breakpoint(medium)
            height 132px
            width 136px

        +breakpoint(small)
            height 99px
            width 96px

    &__text
        text-align left
        z-index 5

    &__text-slogan
        @extends $bigHeader
        color color-green
        margin-bottom 64px

        +breakpoint(medium)
            margin-bottom 48px

        +breakpoint(small)
            margin-bottom 24px
        
    &__text-copy
        @extends $smallHeader
        border-top 2px solid color-green
        font-weight 400
        padding-top 24px

        > p
            color color-white

        +breakpoint(small)
            margin-bottom 48px