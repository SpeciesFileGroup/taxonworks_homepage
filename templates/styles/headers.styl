$bigHeader
    font-size 60px
    font-weight 300
    line-height 1.17

    +breakpoint(medium)
        font-size 50px
        line-height 1.16

    +breakpoint(small)
        font-size 40px
        line-height 1.2

$mediumHeader
    font-size 40px
    font-weight 700
    line-height 48px

    +breakpoint(medium)
        font-size 32px
        line-height 40px

    +breakpoint(small)
        font-size 32px
        line-height 40px

$promoCopyText
    font-size 26px
    line-height 34px

    +breakpoint(medium)
        font-size 24px
        line-height 32px

    +breakpoint(small)
        font-size 24px
        line-height 32px

$normalCopyText
    font-size 20px
    line-height 28px