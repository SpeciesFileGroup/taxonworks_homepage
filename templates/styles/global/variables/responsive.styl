media_queries = {
    small  : "only screen and (max-width: 599px)",
    medium : "only screen and (min-width: 600px) and (max-width: 999px)",
    large  : "only screen and (min-width: 1000px) and (max-width: 1199px)",
    full   : "only screen and (min-width: 1200px)",
    
    medium-header       : "only screen and (min-width: 750px) and (max-width: 999px)",
    small-medium-header : "only screen and (min-width: 600px) and (max-width: 750px)"
}

breakpoint(breakpoints)
    conditions = ()
    for breakpoint in breakpoints
        push(conditions, media_queries[breakpoint])
    conditions = join(", ", conditions)
    @media conditions
        {block}