.navigation
    height header-navbar-bar-height
    left 0
    position fixed
    right 0
    z-index 10

    showFullBarModifier = selector() + --show-full-bar

    &__bar
        align-items center
        background-color color-brown
        display flex
        height header-navbar-bar-height
        padding 2px

    &__logo
        height 48px
        margin-left 16px
        object-fit contain
        opacity 0
        transform translateX(-150%) rotate(-360deg)
        transition all 400ms 100ms cubic-bezier(0, 0, 0.3, 1)
        width 48px

        +breakpoint(small)
            height 36px
            margin-left 8px
            width 36px

    {showFullBarModifier} &__logo
        opacity 1
        transform translateX(0) rotate(0)

    &__title
        height 27px
        margin-left 16px
        object-fit contain
        opacity 0
        transform translateY(-100%)
        transition all 300ms ease-in-out
        width 204px

        +breakpoint(medium)
            margin-left 12px
            width 186px

        +breakpoint(small)
            margin-left 8px
            width 172px

    {showFullBarModifier} &__title
        opacity 1
        transform translateY(0)

    &__links
        display flex
        margin-left auto

        +breakpoint(small)
            background-color color-brown
            display block
            left 0
            position absolute
            top 100%
            transform translateY(-101%)
            transition transform 250ms ease-in-out
            right 0
            z-index -1

            &--open
                transform translateY(0)

    &__link-anchor
        color color-teal
        display block
        padding 8px 24px
        transition color 222ms

        &:hover
        &:focus
            color white

            .navigation__link-anchor-text:after
                transform scaleX(1)
                transform-origin 0 50%

        +breakpoint(medium)
            padding 8px 16px

        +breakpoint(small)
            border-bottom 2px solid color-brown
            color color-teal
            display block
            padding 10px 0
            text-align center
            text-decoration none

            &:hover
                background-color color-teal
                color color-cocoa

    &__link-anchor-text
        position relative

        &:after
            background-color white
            bottom 0
            content ""
            height 1px
            left 0
            position absolute
            transform scaleX(0)
            transform-origin 100% 50%
            transition transform 222ms
            right 0

        +breakpoint(small)
            &:after
                display none

    &__toggle-button
        background-color color-brown
        color color-white
        cursor pointer
        display none
        font-size 24px
        height 36px
        margin-left auto
        margin-right 8px
        position relative
        width 36px

        &:after
            content "\2630"

        +breakpoint(small)
            display inline-block

        &--menu-open:after
            content "\00D7"