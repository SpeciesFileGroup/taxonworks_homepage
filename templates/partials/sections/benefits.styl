.benefits-section
    $mobileImage
        display none
        flex 1 1 200px
        margin 0 auto
        max-width 248px
        position relative

        +breakpoint(small)
            display block

        img
            object-fit contain
            width 100%

    idealSectionHeight = 824px

    &__container
        @extends $sectionContainer
        display flex
        position relative

        &--less-padding-below
            padding-bottom 40px

        &--something
            display block

        &:nth-child(2)
            padding-top 0
            padding-bottom 0

        &__inner
            @extends $normalFlexItem
            display flex
            flex-flow column

            +breakpoint(small)
                display block

    &__section-2
    &__section-3
    &__section-4
        min-height idealSectionHeight

        +breakpoint(small)
            min-height 0

    &__section-2
    &__section-4
        background-color color-grey

    &__section-1
        background-color color-teal
        position relative
        z-index 1

        &-title
            @extends $bigHeader
            @extends $normalFlexItem
            margin-right 32px

            +breakpoint(small)
                flex-basis auto
                margin-bottom 24px
                margin-right 0

        &-copy
            @extends $normalFlexItem
            @extends $promoCopy

    &__leaves
        max-width content-max-width
        margin 0 auto
        transform translateY(32px)

        +breakpoint(small)
            padding-top 37px
            padding-bottom 64px
            position relative
            transform translateY(0)

    &__leaves-image
        height auto
        max-width 100%
        vertical-align bottom

        +breakpoint(small)
            display none

    &__mobile-top-leaves-container
        display none
        left 0
        position absolute
        right 0
        text-align center
        top 0

        +breakpoint(small)
            display block

    &__mobile-leaf
        @extends .benefits-section $mobileImage

        &--hidden
            display none

    &__connecting-lines
        bottom 0
        left 0
        overflow hidden
        position absolute
        right section-padding-desired
        top 0

        +breakpoint(large)
            right section-padding-large-x

        +breakpoint(medium)
            right section-padding-medium-x

        +breakpoint(small)
            right section-padding-small-x

        +breakpoint(small)
            background url(images/branches-1-small.svg) no-repeat calc(100% - 24px) 0%

        &-image
            height 1200px
            position absolute
            right 0
            top -200px
            width 1040px

            +breakpoint(small)
                display none

    &__section-2
        @extends $sectionContainerWithModifiedPadding
        align-items center
        position relative

        +breakpoint(small)
            display block
            padding-bottom section-padding-small-y

        &-copy
            @extends $normalCopy
            flex 0 1 50%
            margin-right 32px
            position relative

            +breakpoint(small)
                margin-bottom 32px

        &-images
            flex 0 0 424px
            margin-left auto
            position relative

            +breakpoint(medium)
                flex 0 1 50%

        &-images-image
            display block
            margin 0 auto
            max-width 100%
            vertical-align bottom

    &__section-3
        @extends $sectionContainerWithModifiedPadding
        align-items center
        background-color color-white
        display flex

        &-image-container
            flex 0 0 467px

            +breakpoint(small)
                order 1

        &-image
            vertical-align bottom

        &-copy
            @extends $normalCopy
            flex 1 1 auto

    &__section-4
        background-image url("images/trunk.svg")
        background-position 85% top 
        background-repeat no-repeat

        +breakpoint(small)
            background-image none

        &-copy
            @extends $normalCopy
            flex 1 1 auto

    treeWidth = 424px

    &__tree
        display none
        overflow hidden

        +breakpoint(small)
            display block

        &-image
            vertical-align bottom

            @media (max-width treeWidth)
                transform 'translateX( calc((%s / 2 - 50vw) * -1) )' % treeWidth

            @media (min-width treeWidth + 1px)
                display block
                margin 0 auto

    &__illustrations
        display flex
        max-height 100%
        max-width 100%

    &__copy
    &__illustration
        position relative

    &__illustration
        @extends $normalFlexItem

        &__1
        &__2
        &__3 
        &__4 
            max-height 25%
            max-width 25%
            object-fit contain

            img
                max-width 100%

                +breakpoint(small)
                    display none

        &__2
        &__3
            position relative

        &__2
            top -80px

        &__3
            top 80px

        &__small
            display none
            width 100%

            +breakpoint(small)
                display block

        &__large
            +breakpoint(small)
                display none

    &__mobile-image
        @extends .benefits-section $mobileImage

    &__sponsor-grid
        @extends $normalFlexItem
        margin-top 48px

    &__empty
        @extends $normalFlexItem

        +breakpoint(small)
            display none
